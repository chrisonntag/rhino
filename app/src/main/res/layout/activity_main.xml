<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hfs.de.rhinov2.MainActivity">

    <Button
        android:id="@+id/switchCity"
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="31dp"
        android:layout_weight="1"
        android:text="switch"
        app:layout_constraintBaseline_toBaselineOf="@+id/latitudeLabel"
        app:layout_constraintLeft_toRightOf="@+id/latitudeLabel"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/cityLabel"
        android:layout_width="221dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Latitude:"
        android:textAppearance="@style/TextAppearance.AppCompat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/listUpdateButton"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Update List"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mainRView"
        android:layout_width="94dp"
        android:layout_height="103dp"
        android:layout_weight="1"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cityLabel"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/listUpdateButton">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
